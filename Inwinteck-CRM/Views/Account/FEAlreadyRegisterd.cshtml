@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Field Engineer Already Registered</title>

    <!-- Google Fonts for a modern font style -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">

    <style>
        body {
            font-family: 'Roboto', sans-serif;
            background-color: #f0f4f8;
            color: #333;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
            text-align: center;
            width: 100%;
            max-width: 600px;
        }

        h2 {
            color: #4CAF50;
            font-weight: 700;
            margin-bottom: 20px;
        }

        p {
            font-size: 18px;
            margin-bottom: 20px;
        }

        .highlight {
            color: #4CAF50;
            font-weight: 700;
        }

        .redirect-message {
            font-size: 16px;
            margin-bottom: 20px;
        }

        .redirect-link {
            text-decoration: none;
            font-size: 16px;
            color: #007BFF;
            font-weight: 600;
        }

            .redirect-link:hover {
                text-decoration: underline;
            }

        .countdown {
            font-weight: bold;
            color: #FF5722;
        }

        .button {
            background-color: #4CAF50;
            color: white;
            padding: 10px 20px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
            margin-top: 20px;
            transition: background-color 0.3s ease;
        }

            .button:hover {
                background-color: #45a049;
            }
    </style>

    <script type="text/javascript">
        var countdownTime = 20;

        // Automatically redirect after 20 seconds
        function startCountdown() {
            var countdownElement = document.getElementById('countdown');
            var countdownInterval = setInterval(function () {
                countdownTime--;
                countdownElement.textContent = countdownTime;

                if (countdownTime <= 0) {
                    clearInterval(countdownInterval);
                    window.location.href = 'https://fms.inwinteck.com';
                }
            }, 1000);
        }

        // Function to manually redirect
        function redirectNow() {
            window.location.href = 'https://fms.inwinteck.com';
        }

        document.addEventListener('DOMContentLoaded', function () {
            startCountdown();
        });
    </script>
</head>
<body>
    <div class="container">
        <h2>You're Already Registered!</h2>
        <p>
            The email <span class="highlight">@ViewBag.Email</span> or phone number <span class="highlight">@ViewBag.PhoneNumber</span> is already registered in our system.
        </p>
        <p class="redirect-message">
            You will be redirected to the homepage in <span id="countdown" class="countdown">20</span> seconds.
        </p>
        <button class="button" onclick="redirectNow()">Redirect Now</button>
        <p>
            If you don't want to wait, <a href="javascript:void(0)" class="redirect-link" onclick="redirectNow()">click here</a> to redirect manually.
        </p>
    </div>
</body>
</html>
