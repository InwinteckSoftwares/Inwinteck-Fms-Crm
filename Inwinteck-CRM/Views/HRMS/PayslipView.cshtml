@model HRMS.Models.getPayslip
@{
    ViewBag.Title = "PayslipView";
    Layout = ViewBag.Layout;
}



<!-- Page Header -->
<div class="row">
    <div class="col-md-12">
        <div class="page-head-box">
            <h3>Payslip</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Payroll</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- /Page Header -->
<!-- Print Section -->
<div class="page-header">
    <div class="row align-items-center">
        <div class="col-auto float-right ml-auto">
            <div class="btn-group btn-group-sm">
                <button class="btn btn-white" onclick="printDiv('printableArea')"><i class="fa fa-print fa-lg"></i> Print</button>
            </div>
        </div>
    </div>
</div>
<!-- /Print Section -->


<div class="row" id="printableArea">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-12 text-center">
                        <img src="@Model.Company_Logo" class="inv-logo" alt="">

                        <ul class="list-unstyled mb-0">
                            <li style="font-size: 20px; font-weight: 900;">@Model.Company_Name</li>
                            <li style="font-weight: 700;">@Model.Company_Address</li>
                            <li>@Model.Company_Contact</li>
                        </ul>
                    </div>
                </div>
                <br>
                <h4 class="payslip-title">Payslip for the month of @Model.Month.ToString("MMM yyyy")</h4>

                <div class="row">

                    <div class="col-sm-12 m-b-20">
                        <table class="table table-bordered">
                            <tbody>

                                <tr>
                                    <td>
                                        Name:
                                    </td>
                                    <td>
                                        <strong>@Model.First_Name @Model.Last_Name</strong>
                                    </td>
                                    <td>
                                        Employee Code:
                                    </td>
                                    <td>
                                        <strong>@Model.Emp_Code</strong>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        Joining Date:
                                    </td>
                                    <td>
                                        <strong>@Model.DOJ.Value.ToString("dd MMM yyyy")</strong>
                                    </td>
                                    <td>
                                        Department:
                                    </td>
                                    <td>
                                        <strong>@Model.Department</strong>
                                    </td>
                                </tr>


                                <tr>
                                    <td>
                                        Mode of Pay:
                                    </td>
                                    <td>
                                        <strong>@Model.Pay_Mode</strong>
                                    </td>

                                    <td>
                                        Designation:
                                    </td>
                                    <td>
                                        <strong>@Model.Designation</strong>
                                    </td>
                                </tr>

                                <tr>
                                    <td>
                                        Bank A/C No:
                                    </td>
                                    <td>
                                        <strong>@Model.Account_No</strong>
                                    </td>

                                    <td>
                                        UAN No:
                                    </td>
                                    <td>
                                        <strong>@Model.Uan</strong>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        Location:
                                    </td>
                                    <td>
                                        <strong>@*@Model.Permanent_Address*@ Thane</strong>
                                    </td>
                                    <td>
                                        ESIC No:
                                    </td>
                                    <td>
                                        <strong>@Model.ESIC_No</strong>
                                    </td>


                                </tr>

                                <tr>
                                    <td>
                                        Aadhaar No:
                                    </td>
                                    <td>
                                        <strong>@Model.Aadhar_No</strong>
                                    </td>
                                    <td>
                                        PAN No:
                                    </td>
                                    <td>
                                        <strong>@Model.Pan_No</strong>
                                    </td>


                                </tr>
                                <tr>
                                    <td>
                                        Days Paid:
                                    </td>
                                    <td>
                                        <strong>@Model.Day_Paid</strong>
                                    </td>
                                    <td>
                                        Bal SL:
                                    </td>
                                    <td>
                                     @Model.Balance_leave
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        LOP/Absent:
                                    </td>
                                    <td>
                                        <strong>@Model.LOP_Absent</strong>
                                    </td>
                                    <td>
                                        Avail. SL:
                                    </td>
                                    <td>
                                        @Model.Availed_leave
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <strong> Earning</strong>
                                    </td>
                                    <td colspan="2" class="text-center">
                                        <strong> Deduction & Recoveries</strong>
                                    </td>

                                </tr>
                                <tr>
                                    <td colspan="2"> Basic Salary  <span class="float-right"> @Model.Basic</span></td>

                                    <td colspan="2"> Provident Fund  <span class="float-right"> @Model.PF</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2"> House Rent Allowance (H.R.A.)  <span class="float-right"> @Model.HRA</span></td>
                                    <td colspan="2"> E.S.I.C  <span class="float-right"> @Model.ESIC</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2"> Conveyance Allowance <span class="float-right"> @Model.Conveyance_Allowance</span></td>
                                    <td colspan="2"> Professional TAX  <span class="float-right"> @Model.PT</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2"> Special Allowance  <span class="float-right"> @Model.Special_Allowance</span></td>
                                    <td colspan="2"> Other Deduction  <span class="float-right"> @Model.Other_Deduction</span></td>
                                </tr>
                                <tr>
                                    <td colspan="2"> Other Earnings  <span class="float-right"> @Model.Other_Earning</span></td>
                                    <td colspan="2">   <span class="float-right"> </span></td>
                                </tr>
                                <tr>
                                    <td><strong>Total Earnings</strong> </td>
                                    <td> <span class="float-right"><strong>₹ @Model.Total_Earnings</strong></span></td>
                                    <td><strong>Total Deductions</strong></td>
                                    <td> <span class="float-right"><strong>₹ @Model.Total_Deduction</strong></span></td>
                                </tr>
                                <tr>
                                    <td colspan="3"><strong>Net Pay</strong></td>
                                    <td> <span class="float-right"><strong>₹ @Model.Net_Pay</strong></span></td>
                                </tr>
                                <tr>
                                    <td colspan="4"><strong>In words:  @ViewBag.Words only</strong></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>


                </div>

                <div class="col-sm-12">
                    <p>This is a system-generated payslip and does not require a signature. </p>
                </div>
                <footer style="margin-top:33%;">
                    <div class="row">
                        <div class="col-sm-12 text-center">
                            <ul class="list-unstyled mb-0">
                                <li>Office: 412, 4th floor, Omega Business Park, Wagle Estate, Thane (W) 400604</li>
                                @*<li>Inwinteck Pte Ltd - 23 Kelantan Lane, #04-01 Kim Hoe Centre, Singapore – 208642 (O/S)</li>*@
                            </ul>
                        </div>
                    </div>
                </footer>
            </div>
            </div>
        </div>
    </div>
@*</div>*@
@section scripts
{

    <script type="text/javascript">
        function printDiv(divName) {
            var printContents = document.getElementById(divName).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;

            window.print();

            document.body.innerHTML = originalContents;
        }
    </script>
}
