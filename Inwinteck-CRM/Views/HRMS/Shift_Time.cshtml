@model  HRMS.Models.Shift_Time_Master
@{
    ViewBag.Title = "Shift Time";
    Layout = ViewBag.Layout;
}


<!-- Page Header -->
<div class="row">
    <div class="col-md-12">
        <div class="page-head-box">
            <h3>Shift Time</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Shift Time</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- /Page Header -->
<div class="card">
    <div class="card-body">

            @if (Model != null)
            {
                using (Html.BeginForm("editShift_Time", "HRMS", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "col-12" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <input type="hidden" value="@Model.Id" name="Id">
                    <input type="hidden" value="@Model.CreatedBy" name="CreatedBy">
                    <input type="hidden" value="@Model.CreatedOn" name="CreatedOn">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Shift Time Start's at <span class="text-danger">*</span></label>
                                <input class="form-control" name="Shift_Time_Start" type="time" value="@Model.Shift_Time_Start" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Shift Time End's at </label>
                                <input class="form-control" name="Shift_Time_Ends" type="time" value="@Model.Shift_Time_Ends">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Grace Period for Punch In Time  <span class="text-danger">* (in hours)</span></label>
                                <input class="form-control" name="Shift_Time_Start_Grace" type="number" value="@Model.Shift_Time_Start_Grace" required>
                            </div>
                        </div>
                        <div class="col-sm-12 text-center">
                            <div class="submit-section">
                                <button class="btn btn-primary submit-btn">Save</button>
                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                using (Html.BeginForm("addShift_Time", "HRMS", FormMethod.Post, new { enctype = "multipart/form-data", role = "form", @class = "col-12" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Shift Time Start's at <span class="text-danger">*</span></label>
                                <input class="form-control" name="Shift_Time_Start" type="time" value="" required>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Shift Time End's at </label>
                                <input class="form-control" name="Shift_Time_Ends" type="time" value="">
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label>Grace Period for Punch In Time  <span class="text-danger">* (in hours)</span></label>
                                <input class="form-control" name="Shift_Time_Start_Grace" type="number" value="" required>
                            </div>
                        </div>

                        <div class="col-sm-12 text-center">
                            <div class="submit-section">
                                <button class="btn btn-primary submit-btn">Save</button>
                            </div>
                        </div>
                    </div>
                }
            }


    </div>
</div>


<div class="modal custom-modal fade" id="msgBox">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body">
                <div class="form-header">
                    <h3 style="font-size: 20px;">@TempData["message"] </h3>
                </div>
                <div class="modal-btn">
                    <div class="submit-section col-sm-4 offset-sm-4">
                        <a href="#" data-dismiss="modal" aria-label="Close" class="btn btn-primary cancel-btn">OK</a>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

@section scripts
{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                $('#msgBox').modal('show');
            };
        </script>
    }

}

