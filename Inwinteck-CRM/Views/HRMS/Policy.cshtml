@model List<HRMS.Models.Policy>
@{
    ViewBag.Title = "Policy";
    Layout = ViewBag.Layout;
    ViewBag.Manger = ViewBag.Mng;
}

<!-- Page Header -->
<div class="row">
    <div class="col-md-12">
        <div class="page-head-box">
            <h3>Policy</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Policy Detail</li>
                </ol>
            </nav>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="table-responsive">
            <table class="table table-striped custom-table mb-0 datatable">
                <thead>
                    <tr>
                        <th>Policy Name </th>
                        <th>Description </th>
                        <th class="text-right">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count > 0)
                    {
                        foreach (var i in Model)
                        {
                            <tr>
                                <td>@i.Policy_Name</td>
                                <td>@i.Description</td>
                                <td class="text-right ico-sec">
                                    <a class="dropdown-item" href="#" data-toggle="modal" data-target="#view_policy_@i.Id"><i class="fas fa-eye"></i></a>

                                    <!-- View Policy Modal -->
                                    <div class="modal custom-modal fade" id="view_policy_@i.Id" role="dialog">
                                        <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">@i.Policy_Name</h5>
                                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                        <i class="fas fa-times"></i>
                                                    </button>
                                                </div>
                                                <div class="modal-body">
                                                    <embed src="@i.Policy_File" style="height: 500px; width:100%;" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- /View Policy Modal -->

                                </td>
                            </tr>
                        }
                    }

                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- /Page Content -->

@section scripts
{
    @if (TempData["message"] != null)
    {
        <script type="text/javascript">

            window.onload = function () {
                $('#msgBox').modal('show');
            };
        </script>
    }

}
