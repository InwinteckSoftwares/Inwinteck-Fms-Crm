        <div class="stats-info @ViewBag.Quarter2">
            <h4>@Model.ls.Leave_Number</h4>
            <h6>Quarter 02</h6>
        </div>
    </div>
    <div class="col-md-3">
        <div class="stats-info @ViewBag.Quarter3">
            <h4>@Model.ls.Leave_Number</h4>
            <h6>Quarter 03</h6>
        </div>
    </div>
    <div class="col-md-3">
