                                                                                <option value="">Select Type</option>
                                                                                <option value="FT" selected>Full Time</option>
                                                                                <option value="CT">Contractual</option>

                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct">
                                                                        <div class="form-group">
                                                                            <label>Company Name</label>
                                                                            <input class="form-control" name="Company_Name" value="@i.Company_Name" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct">
                                                                        <div class="form-group">
                                                                            <label>Company Location</label>
                                                                            <input class="form-control" name="Company_Location" value="@i.Company_Location" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct">
                                                                        <div class="form-group">
                                                                            <label>Company Country</label>
                                                                            <input class="form-control" name="Company_Country" value="@i.Company_Country" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct">
                                                                        <div class="form-group">
                                                                            <label>Project</label>
                                                                            <input class="form-control" name="Project" value="@i.Project" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct">
                                                                        <div class="form-group">
                                                                            <label>Contract Period</label>
                                                                            <input class="form-control" name="Contract_Period" value="@i.Contract_Period" type="date">
                                                                        </div>
                                                                    </div>

                                                                }
                                                                else
                                                                {

                                                                    <div class="col-md-12">
                                                                        <div class="form-group">
                                                                            <label>Employee Type <span class="text-danger">*</span></label><br />
                                                                            <select class="select sel1" name="Emp_Type" >
                                                                                <option value="">Select Type</option>
                                                                                <option value="FT">Full Time</option>
                                                                                <option value="CT" selected>Contractual</option>

                                                                            </select>
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label>Company Name</label>
                                                                            <input class="form-control" name="Company_Name" value="@i.Company_Name" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label>Company Location</label>
                                                                            <input class="form-control" name="Company_Location" value="@i.Company_Location" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label>Company Country</label>
                                                                            <input class="form-control" name="Company_Country" value="@i.Company_Country" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label>Project</label>
                                                                            <input class="form-control" name="Project" value="@i.Project" type="text">
                                                                        </div>
                                                                    </div>
                                                                    <div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label>Contract Period</label>
                                                                            <input class="form-control" name="Contract_Period" value="@i.Contract_Period" type="date">
                                                                        </div>
                                                                    </div>
                                                                    @*<div class="col-md-6 ct" style="display:block">
                                                                        <div class="form-group">
                                                                            <label class="col-form-label">Personal Email </label>
                                                                            <input class="form-control" name="Personal_Email" type="text">
                                                                        </div>
                                                                    </div>*@
                                                                }
                                                            </div>

                                                                    <div class="submit-section">
                                                                        <button class="btn btn-primary cancel-btn" data-dismiss="modal" aria-label="Close">Cancel</button>
                                                                        <button class="btn btn-primary submit-btn">Submit</button>
                                                                    </div>
                                                                }
                                                            </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /Edit Employee Modal -->

                                        <a href="#" data-toggle="modal" data-target="#delete_employee_@i.Id"><i class="far fa-trash-alt"></i></a>

                                        <!-- Delete Employee Modal -->
                                        <div class="modal custom-modal fade" id="delete_employee_@i.Id" role="dialog">
                                            <div class="modal-dialog modal-dialog-centered">
                                                <div class="modal-content">
                                                    <div class="modal-body">
                                                        <div class="form-header">
                                                            <h3>Delete Employee</h3>
                                                            <p>Are you sure want to delete?</p>
                                                        </div>
                                                        <div class="modal-btn delete-action">
                                                            <div class="row">
                                                                <div class="col-6">
                                                                    <a href="@Url.Action("deleteEmployee","HRMS", new {Id = i.Id })" class="btn btn-primary continue-btn">Delete</a>
                                                                </div>
                                                                <div class="col-6">
                                                                    <a href="javascript:void(0);" data-dismiss="modal" class="btn btn-primary cancel-btn">Cancel</a>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- /Delete Employee Modal -->

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
