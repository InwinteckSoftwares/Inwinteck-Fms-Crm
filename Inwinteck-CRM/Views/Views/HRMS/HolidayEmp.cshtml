@model List<HRMS.Models.Holiday>
@{
    ViewBag.Title = "HolidayEmp";
    Layout = ViewBag.Layout;
    ViewBag.Manger = ViewBag.Mng;
}


<!-- Page Header -->
<div class="row">
    <div class="col-md-12">
        <div class="page-head-box">
            <h3>Holidays</h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","Dashboard")">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Holidays</li>
                </ol>
            </nav>
        </div>
    </div>
</div>
<!-- /Page Header -->

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-info">
                            <tr>
                                <th>Title </th>
                                <th>Holiday Date</th>
                                <th>Day</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Count > 0)
                            {
                                foreach (var i in Model)
                                {
                                    <tr>
                                        <td>@i.Holiday_Name</td>
                                        <td>@i.Holiday_Date.ToString("dd MMM yyyy")</td>
                                        <td>
                                            <span class="role-info role-bg-two">@i.Holiday_Date.DayOfWeek</span>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




